%div
  = field_nest :description
  = nest :homepage_featured_projects, items: { view: "listing" }
%div{class: "tabbable", id: "project-tabs"}
  %ul{class: "nav nav-tabs"}
    %li.nav-item
      %a{class: "active nav-link", href: "#project-active", data: {toggle: "tab"}} Active
    %li.nav-item
      %a{class: "nav-link", href: "#project-inactive", data: {toggle: "tab"}} Inactive
  %div.tab-content
    %div{class: "tab-pane active", id: "project-active"}
      = nest "Project+Active", title: "Active Projects", items: { view: "listing" }
    %div{class: "tab-pane", id: "project-inactive"}
      = nest "Project+Inactives", title: "Inactive Projects", items: { view: "listing" }