.panel-default.nodblclick#metric-container
  = answer_form_hidden_tags
  .row.editor
    .col-md-11.year.col-centered
      = field_nest :year, title: "Year"
    - if card.subfield(:related_company)
      .col-md-11.related-company.col-centered
        = field_nest :related_company, title: "Related Company"
    .col-md-11.value.col-centered
      = field_nest :value, title: "Answer"
      %h5.mb-0 Citations
      = haml_partial :cited_sources

      %p
        - with_nest_mode :normal do
          %label
            Comment
          = field_subformat(:discussion).comment_box

  .row.buttons
    .col-md-11.col-centered
      = _render_edit_buttons!
      .card-notice
