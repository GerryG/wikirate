.panel-default.nodblclick.stick-left#metric-container
  .row
    .heading-label
      Company
    = _render_thumbnail

  .row.background-grey
    .heading-label
      Metrics
    - if project?
      .border-bottom.col-md-12.nopadding
        %h5.col-md-2
          Project:
        .col-md-10
          = nest project, view: :listing
    = process_metrics

- haml_wrap do
  .panel-default.stick-right#source-preview-main
    #source-form-container
      .col-md-6.col-centered.text-center.light-grey-color-2._blank_state_message
        %br
        %br
        %br
        %p
          You can add or preview source here.
        %p
          Please click 'add answer' to begin.
