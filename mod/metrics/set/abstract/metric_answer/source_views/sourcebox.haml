
.sourcebox.p-3
  %form.slotter{ method: "get", action: path(view: :source_results), "data-remote": true }
    = text_field_tag :source_search_term, nil, placeholder: "http://",
                                               class: "p-2 w-50",
                                               value: params[:source_search_term]
    = submit_button text: "#{fa_icon :globe} Add URL Source".html_safe,
                    class: "_sourcebox",
                    value: "source_search",
                    situation: "outline-primary"

    = link_to_view :new_source_form, "#{fa_icon :upload} Add File Source",
                   class: "_upload_new_source slotter btn btn-outline-primary",
                   path: { type_id: Card::MetricAnswerID }

= render_flash
